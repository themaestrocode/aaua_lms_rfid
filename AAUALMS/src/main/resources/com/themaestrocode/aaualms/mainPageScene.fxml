                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Hyperlink>
            <Hyperlink fx:id="manageBooksLabel" prefHeight="23.0" prefWidth="115.0" text="Manage Books">
